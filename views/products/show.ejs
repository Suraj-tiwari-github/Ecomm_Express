<% layout('layouts/boilerplate') %>

<div class="row">
  
  <div class="col-6 offset-3 mt-5">
    <div class="card mb-3">
      <div class="card-body">
        <img src="<%=p.image %>" alt="" class="rounded mx-auto d-block img-fluid" width="250" height="250" >
        <h5 class="card-title"><%=p.title%></h5>
        <p class="card-text"><%=p.description%></p>
        <h5>$<%= p.price %> </h5>
      </div>
      <div class="card-body">
        <a class="card-link btn btn-warning" href="/product">Go Back</a>
      </div>

      
      <div class="card-body">
        <!-- !here we need to match the currentUser_id, with author_id, if both matches then we can let user edit and delete, or else edit the button from the current user to delete. -->
        <a
          class="card-link btn btn-info"
          href="/product/<%=p._id%>/edit"
          >Edit</a
        >

        <form
          class=" d-inline"
          action="/product/<%= p._id%>?_method=DELETE" method='post'>
          <button class="btn btn-danger">Delete</button>
        </form>
</div>


 <!-- if(currentUser)   -->
        <div class="card mb-3 mt-3">
            <div class="card-body">
          <form action="/product/<%=p._id%>/reply" method="POST" class="mb-3 validated-form" novalidate>
            <div class="mb-3">
              <label class="form-label" for="body">Leave a review</label>
              <textarea
                name="review[body]"
                id="body"
                rows=""
                cols="30"
                class="form-control"
                required
              >
              </textarea>
            </div>
            <button class="btn btn-success">Post Review</button>
          </form>
          </div>
        </div>
<!-- }  -->


     
      </div>
    </div>
  </div>



